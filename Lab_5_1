#include <stdio.h>
#include <stdlib.h>

int main() {
    int n;
    printf("Введіть кількість елементів масиву: ");
    scanf("%d", &n);

    int a[n];
    printf("Введіть %d цілих чисел:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    int min = a[0];
    int max = a[0];
    for (int i = 1; i < n; i++) {
        if (a[i] < min) {
            min = a[i];
        }
        if (a[i] > max) {
            max = a[i];
        }
    }

    int diff = abs(max - min);
    printf("Модуль різниці між максимальним та мінімальним елементами масиву: %d\n", diff);

    return 0;
}
